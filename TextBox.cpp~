#include "TextBox.h"

using namespace std;
using namespace sf;

TextBox::TextBox(){
  Setup(5,9,200,sf::Vector2f(0,0));
}

TextBox::TextBox(int l_visible, int l_charSize, int l_width, sf::Vector2f l_screenPos){
  Setup(l_visible, l_charSize,  l_width, l_screenPos);
}

TextBox::~TextBox(){Clear();}

void TextBox::Setup(int l_visible, int l_charSize, int l_width, sf::Vector2f l_screenPos){
  m_numVisible = l_visible;
  // x coordinate increase from left to right, and y one increase
  // from top to bottom
  sf::Vector2f l_offset(30.0f,1.0f);
  m_font.loadFromFile("FiraCode-Bold.ttf");
   
  m_backDrop.setSize(sf::Vector2f(l_width,(l_visible*(l_charSize*0.8f))));
  m_backDrop.setFillColor(sf::Color(90,90,90,95));
  m_backDrop.setPosition(sf::Vector2f(0.0f,l_screenPos.y));
  
  // m_content.setColor(sf::Color::White);
  m_content.setFont(m_font);
  m_content.setFillColor(sf::Color(245,201,157,200));
  m_content.setString("");
  m_content.setCharacterSize(l_charSize);
  m_content.setPosition(sf::Vector2f(l_offset.x,l_screenPos.y + l_offset.y));
  
}

void TextBox::Add(std::string l_message){
  m_messages.push_back(l_message);
  if (m_messages.size()<6){return;}
  m_messages.erase(m_messages.begin());
}

void TextBox::Clear(){
  m_messages.clear();
}

void TextBox::Render(sf::RenderWindow& l_window){
  std::string l_content;
  for (auto it:m_messages){
    l_content.append(it+"\n");
  }
  if(l_content!=""){
    // Now m_content take l_content as an input
    m_content.setString(l_content);
    l_window.draw(m_backDrop);
    l_window.draw(m_content);
  }
}
