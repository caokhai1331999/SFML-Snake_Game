{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe build active file",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-Wall",
				"-std=c++17",
				"-fexceptions",
				"-DSFML_STATIC",
				"${fileDirname}\\**.cpp",
            	"${fileDirname}\\**.h",
				"-IC:/Users/klove/Downloads/SFML/SFML-2.5.1 for MINGW/SFML-2.5.1/include",
				"-LC:/Users/klove/Downloads/SFML/SFML-2.5.1 for MINGW/SFML-2.5.1/lib",
				"-lsfml-graphics-d",
				"-lsfml-window-d",
				"-lsfml-system-d",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}